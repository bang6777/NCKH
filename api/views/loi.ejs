                <div class="form-group">
                  <input
                    type="text"
                    name="LOI_TEN"
                    id="txtLoi_TenLoi_add"
                    class="form-control"
                    placeholder="Tên lỗi"
                  />
                </div>
                <div class="form-group ">
                  <textarea
                    class="form-control"
                    name="LOI_MOTA"
                    id="txtLoi_MoTa_add"
                    placeholder="Nhập mô tả...."
                  ></textarea>
                </div>
              

              <div class=" modal-footer">
                <input
                  type="button"
                  value="Lưu"
                  id="btnSave"
                  class="btn btn-primary px-3"
