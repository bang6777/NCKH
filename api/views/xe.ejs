            </table>
            <span id="thongke-huhong" class="justify-content-between"></span>
          </div>
          <div class=" modal-footer">
            <input type="button" value="Đóng" id="btnCancel" class="btn btn-danger px-3" data-dismiss="modal" />
          </div>
        </div>
