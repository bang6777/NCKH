<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Quản lý người dùng</title>

    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/usm/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans"
      rel="stylesheet"
    />
    <!-- My css -->
    <link rel="stylesheet" href="css/login.css" />
    <!-- My js -->
    <script src="./js/function.js" type="text/javascript"></script>
    <script src="./js/taikhoan-ajax.js"></script>

    <!-- Data table -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"
    />

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
  </head>

  <body>
    <script>
        $(document).ready(function () {
            $('#tableTK').DataTable();
        });

    </script>

    <script></script>
    <div id="header">
      <%- include('header'); -%>
    </div>

    <div class="container-fluid bg-white ">
      <h2 class="text-center font-weight-semi-bold text-dark mt-3">
        QUẢN LÝ THÔNG TIN NGƯỜI DÙNG
      </h2>
      <div class="container-fluid">
        <input
          type="button"
          value="Thêm người dùng"
          class="btn btn-info mb-3"
          id="btnAdd"
          data-toggle="modal"
          data-target="#AddTK"
        />
        <input
          type="button"
          value="Xem tất cả"
          class="btn btn-outline-info mb-3"
          id="btnAll"
          data-toggle="modal"
        />

        <!-- Table TK -->
        <div class="table-responsive">
          <table
            id="tableTK"
            class="table table-striped table-bordered"
            style="width:100%"
            cellspacing="0"
            cellpadding="0"
          >
            <thead class="bg-info text-white font-weight-semi-bold text-center">
              <tr>
                <td width="10%">ID</td>
                <td width="15%">Họ tên</td>
                <td width="15%">Đơn vị</td>
                <td width="10%">Loại tài khoản</td>
                <td width="10%">Hiệu lực</td>
                <td width="10%">Thao tác</td>
                <td width="20%">Thống kê</td>
              </tr>
            </thead>

            <tbody class="text-center">
              <!-- <%= JSON.stringify(taikhoan) %> -->
              <% taikhoan.forEach(function(tk){ %>
              <tr>
                <td><%= tk.TK_ID %></td>
                <td><%= tk.TK_HOTEN %></td>

                <td><%= tk.TK_DONVI %></td>
                <td><%= tk.TK_LOAI %></td>
                <td>
                  <!-- <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="ckHieuLuc[1]">
                                    <label class="custom-control-label" for="ckHieuLuc[1]"></label>
                                </div> -->
                  <% if(tk.TK_HIEULUC == 1) {%>
                  <!-- <h2><%= tk.TK_HIEULUC %>  hello</h2> -->
                  <div class="custom-control custom-switch">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      checked="true"
                      id="ckHieuLuc[<%= tk.TK_ID %>]"
                    />
                    <label
                      class="custom-control-label"
                      for="ckHieuLuc[<%= tk.TK_ID %>]"
                    ></label>
                  </div>
                  <%} else {%>
                  <div class="custom-control custom-switch">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      id="ckHieuLuc"
                    />
                    <label class="custom-control-label" for="ckHieuLuc"></label>
                  </div>
                  <%}%>
                </td>

                <td class="thaotac">
                  <i
                    class="fa fa-edit fa-lg"
                    data-toggle="modal"
                    data-target="#EditTK"
                    title="Cập nhật"
                  >
                  </i>
                  <!-- <a href="#"><i class="fa fa-trash fa-lg"></i> -->
                  <form
                    action="/taikhoan/delete/<%= tk.TK_ID %>"
                    method="POST"
                    enctype="application/x-www-form-urlencoded"
                    style="margin-left: 5%"
                  >
                    <label for="btnDelete[<%= tk.TK_ID %>]"
                      ><i class="fa fa-trash fa-lg" title="Xóa"></i
                    ></label>
                    <input type="hidden" name="TK_ID" value="<%= tk.TK_ID %>" />
                    <input
                      type="submit"
                      value="Delete"
                      id="btnDelete[<%= tk.TK_ID %>]"
                      class="btn-hidden"
                    />
                  </form>
                </td>
                <td>
                  <button
                    data-toggle="modal"
                    data-target="#ThongKeTK-MuonTra"
                    class="btn btn-outline-dark btn-sm"
                  >
                    Mượn-trả
                  </button>
                  <button
                    data-toggle="modal"
                    data-target="#ThongKeTK-ViPham"
                    class="btn btn-outline-dark btn-sm"
                  >
                    Vi phạm
                  </button>
                  <button
                    data-toggle="modal"
                    data-target="#ThongKeTK-HuHong"
                    class="btn btn-outline-dark btn-sm"
                  >
                    Hư hỏng
                  </button>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Modal Add TK -->
      <div id="AddTK" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-uppercase">Thêm người dùng</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>
            <form
              action="/taikhoan"
              method="POST"
              enctype="application/x-www-form-urlencoded"
            >
              <div class="modal-body">
                <div class="form-group ">
                  <input
                    type="text"
                    name="TK_ID"
                    id="txtTK_ID"
                    class="form-control"
                    required
                    placeholder="ID người dùng"
                  />
                </div>
                <div class="form-group ">
                  <input
                    type="text"
                    name="TK_HOTEN"
                    id="txtTK_HoTen"
                    class="form-control"
                    required
                    placeholder="Họ tên người dùng"
                  />
                </div>
                <div class="form-group ">
                  <input
                    type="text"
                    name="TK_DONVI"
                    id="txtTK_DonVi"
                    class="form-control"
                    required
                    placeholder="Đơn vị"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="TK_PASSWORD"
                    id="txtTK_Password"
                    class="form-control"
                    required
                    placeholder="Password"
                  />
                </div>
                <div class="form-group ">
                  <select name="TK_QUYEN" id="slTK_Quyen" class="form-control">
                    <option value="-1">Chọn quyền sử dụng</option>
                    <option value="Quản trị">Quản trị</option>
                    <option value="Người dùng">Người dùng</option>
                  </select>
                </div>
                <div class="form-group ">
                  <select name="TK_LOAI" id="slTK_Loai" class="form-control">
                    <option value="-1">Chọn loại tài khoản</option>
                    <option value="Sinh viên">Sinh viên</option>
                    <option value="Giảng viên">Giảng viên</option>
                    <option value="Khách vãng lai">Khách vãng lai</option>
                  </select>
                </div>
              </div>

              <div class=" modal-footer">
                <input
                  type="submit"
                  value="Lưu"
                  id="btnSave"
                  class="btn btn-primary px-3"
                />
                <input
                  type="button"
                  value="Hủy"
                  id="btnCancel"
                  class="btn btn-danger px-3"
                  data-dismiss="modal"
                />
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Modal Edit TK -->
      <div id="EditTK" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-uppercase">
                Cập nhật thông tin người dùng
              </h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>
            <% taikhoan.forEach(function(tk){ %>
            <form
              action="/taikhoan/update/<%= tk.TK_ID %>"
              method="POST"
              enctype="application/x-www-form-urlencoded"
            >
              <%});%>
              <div class="modal-body">
                <div class="modal-body">
                  <div class="form-group ">
                    <input
                      type="text"
                      name="TK_ID"
                      id="txtTK_ID"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group ">
                    <input
                      type="text"
                      name="TK_HOTEN"
                      id="txtTK_HoTen"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group ">
                    <input
                      type="text"
                      name="TK_DONVI"
                      id="txtTK_DonVi"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group ">
                    <select id="slTK_Quyen" class="form-control">
                      <option value="-1">Chọn quyền sử dụng</option>
                      <option value="Quản trị">Quản trị</option>
                      <option value="Người dùng">Người dùng</option>
                    </select>
                  </div>
                  <div class="form-group ">
                    <select id="slTK_Loai" class="form-control">
                      <option value="-1">Chọn loại tài khoản</option>
                      <option value="Sinh viên">Sinh viên</option>
                      <option value="Giảng viên">Giảng viên</option>
                      <option value="Khách vãng lai">Khách vãng lai</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class=" modal-footer">
                <input
                  type="submit"
                  value="Lưu"
                  id="btnSave"
                  class="btn btn-primary px-3"
                />
                <input
                  type="button"
                  value="Hủy"
                  id="btnCancel"
                  class="btn btn-danger px-3"
                  data-dismiss="modal"
                />
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Modal ThongKe TK Muon Tra -->
      <div id="ThongKeTK-MuonTra" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-uppercase">
                Thống kê lượt mượn trả xe
              </h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>

            <div class="modal-body">
              <table class="table table-sm mx-auto table-striped text-center">
                <thead>
                  <td>ID mượn trả</td>
                  <td>ID xe</td>
                  <td>Thời gian mượn</td>
                  <td>Thời gian trả</td>
                </thead>
                <tbody>
                  <td>1</td>
                  <td>X01</td>
                  <td>15:00:00 06/05/2019</td>
                  <td>15:15:00 06/05/2019</td>
                </tbody>
              </table>
            </div>
            <div class=" modal-footer">
              <input
                type="button"
                value="Đóng"
                id="btnCancel"
                class="btn btn-danger px-3"
                data-dismiss="modal"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Modal ThongKe TK Vi Pham -->
      <div id="ThongKeTK-ViPham" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-uppercase">Thống kê lượt vi phạm</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>

            <div class="modal-body">
              <table class="table table-sm mx-auto table-striped text-center">
                <thead>
                  <td>ID vi phạm</td>
                  <td>ID mượn trả</td>
                  <td>Tên lỗi</td>
                  <td>Xe vi phạm</td>
                  <td>Thời gian vi phạm</td>
                </thead>
                <tbody>
                  <td>1</td>
                  <td>2</td>
                  <td>Ngoài khuôn viên trường</td>
                  <td>X02</td>
                  <td>17:00:00 06/05/2019</td>
                </tbody>
              </table>
            </div>
            <div class=" modal-footer">
              <input
                type="button"
                value="Đóng"
                id="btnCancel"
                class="btn btn-danger px-3"
                data-dismiss="modal"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Modal ThongKe TK Hu Hong -->
      <div id="ThongKeTK-HuHong" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-uppercase">
                Thống kê lượt báo hư hỏng
              </h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>

            <div class="modal-body">
              <table class="table table-sm mx-auto table-striped text-center">
                <thead>
                  <td>ID hư hỏng</td>
                  <td>ID xe</td>
                  <td>Mô tả hư hỏng</td>
                  <td>Thời gian</td>
                </thead>
                <tbody>
                  <td>1</td>
                  <td>X002</td>
                  <td>Xe xẹp bánh</td>
                  <td>17:00:00 06/05/2019</td>
                </tbody>
              </table>
            </div>
            <div class=" modal-footer">
              <input
                type="button"
                value="Đóng"
                id="btnCancel"
                class="btn btn-danger px-3"
                data-dismiss="modal"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
